{
  "_metadata": {
    "version": "1.0.0",
    "description": "Default configuration for Security Scanner with recommended settings",
    "last_updated": "2025-08-30"
  },
  "scan_targets": {
    "docker_images": [],
    "git_repositories": [],
    "kubernetes_manifests": [],
    "terraform_code": [],
    "filesystem_paths": []
  },
  "scanners": {
    "trivy": {
      "enabled": true,
      "timeout": 900,
      "severity_threshold": "HIGH",
      "additional_args": [
        "--timeout", "15m",
        "--dependency-tree",
        "--list-all-pkgs",
        "--ignore-unfixed"
      ],
      "description": "Comprehensive security scanner for containers, filesystems, and Git repositories"
    },
    "grype": {
      "enabled": true,
      "timeout": 300,
      "severity_threshold": "MEDIUM",
      "additional_args": [],
      "description": "Fast vulnerability scanner for container images and filesystems"
    },
    "syft": {
      "enabled": true,
      "timeout": 300,
      "severity_threshold": "INFO",
      "additional_args": [],
      "description": "SBOM (Software Bill of Materials) generator"
    },
    "dockle": {
      "enabled": true,
      "timeout": 300,
      "severity_threshold": "MEDIUM",
      "additional_args": [],
      "description": "Container image linter for security best practices"
    },
    "hadolint": {
      "enabled": true,
      "timeout": 300,
      "severity_threshold": "MEDIUM",
      "additional_args": [],
      "description": "Dockerfile linter for best practices"
    },
    "checkov": {
      "enabled": true,
      "timeout": 600,
      "severity_threshold": "MEDIUM",
      "additional_args": [
        "--quiet"
      ],
      "description": "Static code analysis for Infrastructure as Code"
    },
    "kics": {
      "enabled": true,
      "timeout": 600,
      "severity_threshold": "MEDIUM",
      "additional_args": [],
      "description": "Security scanner for Infrastructure as Code"
    },
    "conftest": {
      "enabled": true,
      "timeout": 300,
      "severity_threshold": "MEDIUM",
      "additional_args": [],
      "description": "Policy testing tool for structured configuration data"
    },
    "trufflehog": {
      "enabled": true,
      "timeout": 900,
      "severity_threshold": "HIGH",
      "additional_args": [
        "--no-verification",
        "--filter-entropy=3.0",
        "--concurrency=4"
      ],
      "description": "Secrets scanner for Git repositories and Docker images"
    },
    "gitleaks": {
      "enabled": true,
      "timeout": 300,
      "severity_threshold": "HIGH",
      "additional_args": [],
      "description": "SAST tool for detecting secrets in Git repositories"
    },
    "semgrep": {
      "enabled": true,
      "timeout": 600,
      "severity_threshold": "MEDIUM",
      "additional_args": [
        "--config=p/security-audit",
        "--config=p/owasp-top-10"
      ],
      "description": "Multi-language SAST tool for finding bugs and security issues"
    }
  },
  "output": {
    "base_dir": "reports",
    "formats": ["json", "html"],
    "include_raw": true,
    "consolidate_reports": true,
    "generate_executive_summary": true
  },
  "execution": {
    "parallel_scans": true,
    "max_workers": 4,
    "fail_on_high_severity": false
  },
  "logging": {
    "level": "INFO",
    "file": null
  },
  "presets": {
    "quick": {
      "description": "Quick scan with essential tools only",
      "scanners": ["trivy", "dockle", "gitleaks"],
      "timeout_multiplier": 0.5
    },
    "comprehensive": {
      "description": "Full security scan with all tools",
      "scanners": ["trivy", "grype", "syft", "dockle", "hadolint", "checkov", "kics", "conftest", "trufflehog", "gitleaks", "semgrep"],
      "timeout_multiplier": 1.5
    },
    "container_focused": {
      "description": "Container security focused scan",
      "scanners": ["trivy", "grype", "syft", "dockle", "trufflehog"],
      "timeout_multiplier": 1.0
    },
    "infrastructure_focused": {
      "description": "Infrastructure as Code focused scan",
      "scanners": ["checkov", "kics", "conftest", "hadolint"],
      "timeout_multiplier": 1.0
    }
  }
}